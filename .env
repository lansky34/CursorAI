# Server Configuration
PORT=3000
NODE_ENV=development

# Database - Use local MongoDB for development
MONGODB_URI=mongodb://localhost:27017/reviewAggregator

# For production, use Atlas URI:
# MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<dbname>?retryWrites=true&w=majority

# API Keys
OPENAI_API_KEY=your_openai_api_key_here

# Security
JWT_SECRET=your_jwt_secret_here
API_RATE_LIMIT=100

# Feature Flags
ENABLE_AI_INSIGHTS=true
ENABLE_SENTIMENT_ANALYSIS=true

# Cache Configuration
CACHE_TTL=3600

# PostgreSQL Configuration
DATABASE_URL=postgres://username:password@host:5432/database_name

# For local development, might look like:
# DATABASE_URL=postgres://localhost:5432/review_aggregator

# Monitoring Configuration
NEW_RELIC_LICENSE_KEY=your_license_key
SENTRY_DSN=your_sentry_dsn
PAPERTRAIL_HOST=logs.papertrailapp.com
PAPERTRAIL_PORT=12345
STATSD_HOST=your_statsd_host
STATSD_PORT=8125
LOG_LEVEL=info

# Alert Thresholds
MEMORY_ALERT_THRESHOLD=500
SLOW_REQUEST_THRESHOLD=1000
SLOW_QUERY_THRESHOLD=1000

# SSL Configuration
SSL_KEY_PATH=/path/to/ssl/private.key
SSL_CERT_PATH=/path/to/ssl/certificate.crt
SSL_CA_PATH=/path/to/ssl/ca_bundle.crt
HTTPS_PORT=443

# Security Settings
SECURE_COOKIE=true
COOKIE_SECRET=your_secure_cookie_secret
CORS_ORIGIN=https://yourdomain.com
HSTS_MAX_AGE=31536000

# Feedback and Alerts
ALERT_EMAIL=alerts@yourdomain.com
SLACK_WEBHOOK_URL=your_slack_webhook_url
PAGERDUTY_API_KEY=your_pagerduty_api_key
SENTRY_DSN=your_sentry_dsn

# Alert Thresholds
CRITICAL_ISSUES_THRESHOLD=5
ERROR_RATE_THRESHOLD=0.05
RESPONSE_TIME_THRESHOLD=2000