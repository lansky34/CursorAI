# Server Configuration
NODE_ENV=development                    # Required: development, production, test, staging
PORT=3000                              # Optional: defaults to 3000

# Database Configuration
DATABASE_URL=postgres://user:pass@host:5432/db    # Required: PostgreSQL connection URL
MONGODB_URI=mongodb://localhost/dbname            # Required: MongoDB connection URL

# Security
JWT_SECRET=your-secure-jwt-secret-min-32-chars    # Required: Min 32 characters
SESSION_SECRET=your-secure-session-secret         # Required: Min 32 characters
API_RATE_LIMIT=100                               # Optional: defaults to 100

# API Keys
OPENAI_API_KEY=sk-your-openai-api-key            # Required: OpenAI API key
MAPBOX_ACCESS_TOKEN=your-mapbox-token            # Required: Mapbox access token

# AWS Configuration (Optional)
AWS_ACCESS_KEY_ID=your-aws-key                   # Optional
AWS_SECRET_ACCESS_KEY=your-aws-secret            # Optional
AWS_REGION=us-east-1                             # Optional: us-east-1, us-west-2, eu-west-1

# Monitoring (Optional)
NEW_RELIC_LICENSE_KEY=your-new-relic-key         # Optional
SENTRY_DSN=your-sentry-dsn                       # Optional

# SSL Configuration (Required in production)
SSL_KEY_PATH=/path/to/ssl/key                    # Required in production
SSL_CERT_PATH=/path/to/ssl/cert                  # Required in production

# Feature Flags
ENABLE_AI_INSIGHTS=true                          # Optional: defaults to true
ENABLE_SENTIMENT_ANALYSIS=true                   # Optional: defaults to true

# Cache Configuration
REDIS_URL=redis://localhost:6379                 # Optional
CACHE_TTL=3600                                   # Optional: defaults to 3600