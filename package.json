{
  "name": "review-aggregator",
  "version": "1.0.0",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm run build:clean && npm run build:assets",
    "build:clean": "rm -rf dist/",
    "build:assets": "cp -r public/ dist/",
    "heroku-postbuild": "npm run db:setup",
    "db:migrate": "knex migrate:latest",
    "db:rollback": "knex migrate:rollback",
    "test": "jest --runInBand",
    "test:watch": "jest --watch --runInBand",
    "test:coverage": "jest --coverage --runInBand",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "migrate": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback",
    "migrate:make": "knex migrate:make",
    "seed": "knex seed:run",
    "seed:make": "knex seed:make",
    "db:setup": "node scripts/db-setup.js",
    "check-migrations": "node scripts/checkMigrationStatus.js",
    "migrate:status": "knex migrate:status",
    "migrate:latest": "knex migrate:latest",
    "migrate:reset": "knex migrate:rollback --all && knex migrate:latest",
    "test:setup": "ts-node scripts/test-setup.ts",
    "test:cleanup": "ts-node scripts/test-cleanup.ts"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.0.0",
    "pg": "^8.11.3",
    "pg-pool": "^3.6.1",
    "dotenv": "^16.0.3",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1",
    "newrelic": "^10.6.0",
    "knex": "^2.5.1",
    "@sentry/node": "^7.0.0",
    "hot-shots": "^9.0.0",
    "winston-papertrail": "^1.0.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
} 